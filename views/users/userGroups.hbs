<div class="container">

<h1>{{user.name}}'S GROUPS</h1>


<div class="mygroups-left">
<h2>GROUPS I'VE STARTED</h2>
{{#each allGroups}}
{{#if this.myGroup}}

    <div class="groups-container">

        <div class="group-left">
            <br><b>Group Name:</b>
            <br><a href="/groups/show/{{this._id}}">{{this.name}}</a></br>

            <br><b>Group Creator: </b>
            <br>{{this.owner.name}}</br>

            <br><b>Current Book:</b>
                <br><a href="/book/{{this.currentBook._id}}"><img src="{{this.currentBook.thumbnail}}">
                <br><b>{{this.currentBook.title}}</b></a>
        </div>

        <div class="group-right">
            <br><b>Members:</b>
                {{#if members}}
                {{#each members}}
                <li>{{this.name}}</li>
                {{/each}}</br>
                {{/if}}
                {{#unless members}}
                <br>Sorry, no members to show.
                {{/unless}}

            <br><b>Group Progress: </b>{{this.progress}} %</br>

            <br><b>Latest Review:</b>
                {{#if groups.memberReviews}}
                {{#each groups.memberReviews}}
                <li>{{this.author}}</li>
                <li>{{this.content}}</li>
                {{/each}}</br>
                {{/if}}
                {{#unless groups.memberReviews}}
                <p>No reviews to show.</p>
                {{/unless}}

            <br><b>Latest Comment:</b>
                {{#each groups.memberComments}}
                <li>{{this}}</li>
                {{/each}}</br>

            <br><button><a href="/groups/show/{{this._id}}">GROUP PAGE</a></button>

        </div>

    </div>
    <hr>

    {{/if}}
    {{/each}}

</div>

