<div class="container">

        <h1>CREATE NEW GROUP PAGE</h1>
<div class="left-half">


        <form action="/groups/create/" method="post">

        <label for="name">Group Name:</label>
        <input type="text" name="name" id="name" required="true">
        <br>

        <label for="members">Add Members:</label>
        <select multiple name="members" id="members" class="select-members" required="true">
                {{#each allUsers}}
                        {{#unless this.yes}}
                        <option value="{{this._id}}">{{this.name}}</option>
                        {{/unless}}
                {{/each}}
        </select>

        <p></p><button class="btn" type="submit">CREATE GROUP</button>


        {{!-- PUBLIC VS. PRIVATE IS COMMENTED OUT AS AN EXTRA FEATURE THAT I'LL ADD IF TIME PERMITS --}}

