        <input id="bookID"type="hidden" name="bookID">

        <input id="bookRating"type="hidden" name="bookRating">

        <input id="bookThumbnail"type="hidden" name="bookThumbnail">

        <input id="bookTitle"type="hidden" name="bookTitle">

        <input id="bookAuthor"type="hidden" name="bookAuthor">

        <input id="bookPagecount"type="hidden" name="bookPagecount">

        <input id="bookDescription"type="hidden" name="bookDescription">

        </form>
</div>

<div class="find-book right-half">
        <div class="search-box">

            {{!-- &nbsp;&nbsp;&nbsp;&nbsp;<h1>GET A BOOK</h1> --}}


                <input id="searchInput" type="text" required="true"></input>
                <button id="get-book">SEARCH FOR BOOK</button>

        </div>

        <div class="bookresults-container"></div>
</div>

<script src='/javascripts/addBooks.js'></script>


</div>